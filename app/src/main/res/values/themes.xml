<resources>
    <!-- Base application theme. -->
    <style name="Theme.MicroPOS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">#FFC107</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textColor" parent="AppTheme">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="hintTextColor" parent="AppTheme">
        <item name="android:hint">#707070</item>
    </style>
    <style name="misTextColor" parent="AppTheme">
        <item name="android:textColor">#000000</item>
    </style>

</resources>